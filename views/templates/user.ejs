<div class="d-flex justify-content-left align-items-left">
  <div class="btn-group" style="display: flex; align-items: center;">

    <h style="font-size: 30px; display: inline-block; margin-right: 10px;">
      <%= user.username %> <span style="font-size: 20px; vertical-align: middle;"> <%= user.userType %></span>
    </h>

    <button class="btn btn-dark btn-lg btn-rounded" type="submit"
      style="margin: 2%; font-size:14px; padding:2%; height: 40px" onClick="promoteUser('<%= user.username %>')">
      <%= buttonText1 %>
    </button>

    <button class="btn btn-info btn-lg btn-rounded" type="submit"
      style="margin: 2%; font-size:14px; padding:2%; height: 40px" onClick="demoteUser('<%= user.username %>')">
      <%= buttonText2 %>
    </button>

  </div>
</div>



<script>
  function promoteUser(username) {
    //   console.log('start');
    const formData = new URLSearchParams();
    formData.append('username', username);
    formData.append('userType', 'admin');

    fetch('/updateUserType', {
      method: 'POST',
      body: formData
    })
  }

  function demoteUser(username) {
    //   console.log('start');
    const formData = new URLSearchParams();
    formData.append('username', username);
    formData.append('userType', 'user');

    fetch('/updateUserType', {
      method: 'POST',
      body: formData
    })
  }

</script>